<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>adminFilter</filter-name>
        <filter-class>it.unitn.disi.jadidi.delivery3.adminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>adminFilter</filter-name>
        <url-pattern>/admin.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unitn.disi.jadidi.delivery3.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>it.unitn.disi.jadidi.delivery3.adminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mainServ</servlet-name>
        <servlet-class>it.unitn.disi.jadidi.delivery3.mainServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>endSessionServlet</servlet-name>
        <servlet-class>it.unitn.disi.jadidi.delivery3.endSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mainServ</servlet-name>
        <url-pattern>/mainServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>endSessionServlet</servlet-name>
        <url-pattern>/endSessionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
